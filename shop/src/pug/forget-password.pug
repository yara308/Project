doctype html
html(lang="en")
    head
        include inc/head.pug

    body
        include inc/loader.pug

        // Login Wrapper Area
        .login-wrapper.d-flex.align-items-center.justify-content-center.text-center                
            .container
                .row.justify-content-center
                    .col-10.col-lg-8
                        img.big-logo(src="img/core-img/logo-white.png" alt="")

                        // Register Form
                        .register-form.mt-5
                            form(action="forget-password-success.html" method="")
                                .form-group.text-start.mb-4
                                    span Email or Username
                                    label(for="email")
                                        i.fa-solid.fa-user
                                    input.form-control#email(type="text" placeholder="Designing World")

                                button.btn.btn-warning.btn-lg.w-100(type="submit") Reset Password

        include inc/footer-no-internet.pug