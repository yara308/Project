doctype html
html(lang="en")
    head
        include inc/head.pug

    body
        include inc/loader.pug

        // Login Wrapper Area
        .login-wrapper.d-flex.align-items-center.justify-content-center.text-center.bg-success
            .container
                .row.justify-content-center
                    .col-10.col-lg-8
                        h3.mb-4.text-white Become a seller

                        // Register Form
                        .register-form.mt-5
                            form(action="otp.html" method="")
                                .form-group.text-start.mb-4
                                    span.mb-2 Account Type*
                                    .row
                                        .col-6
                                            .form-check
                                                input.form-check-input#personal(type="radio" name="accountType")
                                                label.form-check-label.text-white.fz-14(for="personal") Personal
                                        .col-6
                                            .form-check
                                                input.form-check-input#business(type="radio" name="accountType" checked)
                                                label.form-check-label.text-white.fz-14(for="business") Business

                                .form-group.text-start.mb-4
                                    span Store Name*
                                    label(for="username")
                                        i.fa-solid.fa-basket-shopping
                                    input.form-control#username(type="text" placeholder="Designing World")

                                .form-group.text-start.mb-4
                                    span Location*
                                    label(for="location")
                                        i.fa-solid.fa-location-dot
                                    input.form-control#location(type="text" placeholder="New York")

                                .form-group.text-start.mb-4
                                    span Mobile Number*
                                    label(for="mobileNumber")
                                        i.fa-solid.fa-phone
                                    input.input-psswd.form-control#mobileNumber(type="text" placeholder="+62 1234 7896 123")

                                .form-group.text-start.mb-4
                                    span Password*
                                    label(for="registerPassword")
                                        i.fa-solid.fa-key
                                    input.input-psswd.form-control#registerPassword(type="password" placeholder="")
                                
                                .form-group.text-start.mb-4
                                    .form-check
                                        input.form-check-input#acceptTerms(type="checkbox" value="")
                                        label.form-check-label.fz-14.text-white(for="acceptTerms") I have read and understood all the 
                                            a.fz-14.text-warning.text-decoration-underline(href="privacy-policy.html") terms &amp; conditions.

                                button.btn.btn-warning.btn-lg.w-100(type="submit") Sign Up

                        // Login Meta
                        .login-meta-data
                            p.mt-3.mb-0 Already have an store?
                                a.ms-1(href="login.html") Log In

        include inc/footer-no-internet.pug